function ExtractLastId(ids)
    local first_id = nil
    for id in string.gmatch(ids, "([^,]+)") do
        first_id = id
    end
    return first_id
end

function StackItem(name)
	FindItem(name)
	local last = ExtractLastId(FINDITEMID)
	
	for id in string.gmatch(FINDITEMID, "([^,]+)") do
	    Drag(id)
	    Dropc(last)
	end
end

StackItem("Bowl")
